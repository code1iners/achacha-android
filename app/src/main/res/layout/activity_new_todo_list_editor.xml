<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newTodoListEditorActivity__layout"
    android:orientation="vertical"
    android:background="@drawable/background_002"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewTodoListEditorActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="40dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/newTodoListEditorActivity__header_container"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newTodoListEditorActivity__header_title"
                android:text="@string/title"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/default_text_color"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/newTodoListEditorActivity__body_container"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/newTodoListEditorActivity__body_editor"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/default_text_color"
                android:backgroundTint="@color/default_text_color"
                android:paddingVertical="10dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newTodoListEditorActivity__footer_container"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/newTodoListEditorActivity__footer_cancel"
                android:text="@string/button_cancel"
                android:textSize="20sp"
                android:textColor="@color/sexyRed"
                android:background="@null"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/newTodoListEditorActivity__footer_confirm"
                android:text="@string/button_confirm"
                android:textSize="20sp"
                android:textColor="@color/sexyBlue"
                android:background="@null"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>