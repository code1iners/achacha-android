<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/setUsernameFragment__logo_container"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@drawable/circle"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <ImageView
            android:id="@+id/setUsernameFragment__logo_image"
            android:background="@null"
            android:src="@drawable/alpaca_001"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/setUsernameFragment__username_container"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setUsernameFragment__username_question"
            android:text="@string/set_username_question"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/setUsernameFragment__username_answer"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>