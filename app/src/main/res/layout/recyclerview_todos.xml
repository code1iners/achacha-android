<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/todosRecyclerView_check"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/todosRecyclerView_todo_read_mode"
        android:layout_toEndOf="@+id/todosRecyclerView_check"
        android:layout_toStartOf="@+id/todosRecyclerView_menu"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/todosRecyclerView_todo_write_mode"
        android:layout_toEndOf="@+id/todosRecyclerView_check"
        android:layout_toStartOf="@+id/todosRecyclerView_delete"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/todosRecyclerView_delete"
        android:src="@drawable/delete_003"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</RelativeLayout>